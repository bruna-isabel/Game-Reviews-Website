{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon.cmd"
      },
      "runtimeArgs": [
        "--harmony",
        "--use_strict",
        "--inspect-brk=9898",
        "index.js"
      ],
      "restart": true,
      "port": 9898,
      "cwd": "${workspaceFolder}",
    }
  ]
}